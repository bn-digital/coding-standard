{
  "name": "bn-digital",
  "description": "Collection of coding standards, style guides and shared configurations",
  "version": "2.0.0",
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad.volkov@bndigital.co",
    "url": "https://github.com/vladyslavvolkov"
  },
  "maintainers": [
    {
      "name": "BN Enginseer",
      "email": "dev@bndigital.co",
      "url": "https://github.com/bn-enginseer"
    }
  ],
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "prettier": "@bn-digital/prettier-config",
  "eslintConfig": {
    "extends": "@bn-digital/eslint-config"
  },
  "bin": {
    "eslint": "node_modules/eslint/bin/eslint.js",
    "lint": "./bin/lint.js"
  },
  "dependencies": {
    "@bn-digital/eslint-config": "^2.1.3",
    "@bn-digital/graphql-config": "^2.2.6",
    "@bn-digital/postcss-config": "^2.0.11",
    "@bn-digital/prettier-config": "^2.3.7",
    "@bn-digital/stylelint-config": "^2.0.18",
    "@bn-digital/typescript-config": "^1.2.6"
  },
  "scripts": {
    "lint": "lint --include=scripts",
    "fix": "lint --include=scripts --fix",
    "build": "yarn workspaces foreach run build",
    "release": "yarn npm publish"
  },
  "packageManager": "yarn@3.5.0"
}
