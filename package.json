{
  "name": "@bn-digital/cosmiconfig",
  "description": "Collection of coding standards, style guides and shared configurations",
  "version": "1.0.9",
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/bn-digital/configs.git"
  },
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad.volkov@bndigital.co",
    "url": "https://github.com/vladyslavvolkov"
  },
  "maintainers": [
    {
      "name": "BN Enginseer",
      "email": "dev@bndigital.co",
      "url": "https://github.com/bn-enginseer"
    }
  ],
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "prettier": "@bn-digital/prettier-config",
  "eslintConfig": {
    "extends": "@bn-digital/eslint-config"
  },
  "commitlint": {
    "extends": "@bn-digital/commitlint-config"
  },
  "bin": {
    "lint": "./bin/lint.js"
  },
  "files": [
    "bin"
  ],
  "dependencies": {
    "@bn-digital/commitlint-config": "^2.0.3",
    "@bn-digital/eslint-config": "^2.2.3",
    "@bn-digital/graphql-config": "^2.3.2",
    "@bn-digital/prettier-config": "^2.3.8",
    "@bn-digital/projen": "^0.9.2",
    "@bn-digital/stylelint-config": "^2.2.0",
    "@bn-digital/typescript-config": "^1.3.3",
    "@types/node": "^20.1.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^13.2.2",
    "typedoc": "^0.24.6"
  },
  "bundledDependencies": [
    "eslint",
    "graphql",
    "prettier",
    "lint-staged",
    "@types/node",
    "typescript",
    "husky",
    "projen",
    "stylelint"
  ],
  "scripts": {
    "generate": "typedoc --out docs/vite packages/vite/src/index.ts",
    "lint": "lint tsx less",
    "fix": "lint --include=scripts --fix",
    "build": "yarn workspaces foreach run build",
    "release": "yarn npm publish",
    "postinstall": "husky install"
  },
  "packageManager": "yarn@3.5.0"
}
