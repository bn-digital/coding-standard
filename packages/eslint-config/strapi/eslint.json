{
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "jsx": false
  },
  "ignorePatterns": ["*.ts", "*.tsx", "*.jsx"],
  "env": { "commonjs": true, "es6": true, "node": true, "browser": false },
  "globals": {
    "strapi": true,
    "process": "readonly"
  },
  "plugins": ["unicorn"],
  "overrides": [
    {
      "files": ["*.graphql"],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": ["@graphql-eslint"],
      "parserOptions": {
        "operations": ["./src/**/*.graphql"],
        "schema": "./packages/cms/exports/schema.graphql"
      },
      "rules": {
        "unicorn/filename-case": [
          "warn",
          {
            "cases": {
              "pascalCase": true,
              "camelCase": true
            }
          }
        ]
      }
    }
  ],
  "rules": {
    "unicorn/filename-case": [
      "warn",
      {
        "cases": {
          "pascalCase": true,
          "kebabCase": true,
          "camelCase": true
        }
      }
    ]
  }
}
