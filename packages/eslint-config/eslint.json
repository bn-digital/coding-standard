{
  "root": true,
  "extends": ["prettier"],
  "ignorePatterns": ["*.ts", "*.tsx"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["dirnames", "simple-import-sort", "import", "prettier", "unicorn"],
  "rules": {
    "dirnames/match-kebab-case": "warn",
    "simple-import-sort/exports": "warn",
    "simple-import-sort/imports": "warn",
    "unicorn/better-regex": "warn",
    "unicorn/no-empty-file": "error",
    "unicorn/no-for-loop": "warn",
    "unicorn/no-new-buffer": "warn",
    "unicorn/no-unsafe-regex": "warn",
    "unicorn/no-useless-spread": "warn",
    "unicorn/prefer-modern-dom-apis": "warn",
    "unicorn/prefer-query-selector": "warn",
    "unicorn/prefer-ternary": "warn"
  },
  "globals": {
    "process": "readonly",
    "strapi": true
  },
  "env": { "node": true, "es6": true, "jest": true, "shared-node-browser": true },
  "overrides": [
    {
      "files": ["*.graphql"],
      "extends": "@bn-digital/eslint-config/graphql",
      "parserOptions": {
        "operations": ["./packages/*/src/**/*.graphql"],
        "schema": "./packages/cms/src/graphql/schema.graphql"
      }
    }
  ]
}
