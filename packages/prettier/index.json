{
  "arrowParens": "avoid",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "jsxSingleQuote": true,
  "printWidth": 120,
  "quoteProps": "consistent",
  "semi": false,
  "singleAttributePerLine": false,
  "singleQuote": false,
  "organizeImportsSkipDestructiveCodeActions": true,
  "trailingComma": "es5",
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-prisma"],
  "tabWidth": 2,
  "useTabs": false,
  "vueIndentScriptAndStyle": true,
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.mjs", "*.cjs"],
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": ["*.ts", "*.tsx", "*.d.ts"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.xml"],
      "options": {
        "plugins": ["xml"]
      }
    },
    {
      "files": ["*.less"],
      "options": {
        "parser": "less"
      }
    },
    {
      "files": ["*.prisma"],
      "options": {
        "parser": "prisma-parse"
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "parser": "css"
      }
    },
    {
      "files": ["*.scss", "*.scss", "*.sass"],
      "options": {
        "parser": "scss"
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "excludeFiles": ["helmfile.yaml"],
      "options": {
        "singleQuote": true,
        "parser": "yaml"
      }
    },
    {
      "files": ["*.graphql", "*.gql", ".graphqls"],
      "options": {
        "parser": "graphql"
      }
    },
    {
      "files": ["*.vue"],
      "options": {
        "parser": "vue"
      }
    },
    {
      "files": [
        "*.json",
        ".graphqlconfig",
        ".stylelintrc",
        ".prettierrc",
        ".eslintrc",
        ".babelrc",
        ".mocharc",
        ".lintstagedrc"
      ],
      "excludeFiles": ["package.json", "package-lock.json"],
      "options": {
        "trailingComma": "none",
        "proseWrap": "never",
        "parser": "json"
      }
    },
    {
      "files": [
        "*.html",
        "*.htm",
        "*.ejs",
        "*.jsp",
        "*.aspx",
        "*.asax",
        "*.ascx",
        "*.master",
        "*.cshtml",
        "*.tshtml",
        "*.twig"
      ],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["*.xml", "*.svg"],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["*.mdx"],
      "options": {
        "parser": "mdx"
      }
    },
    {
      "files": ["*.md", "README", "CHANGELOG", "CODE_OF_CONDUCT", "CONTRIBUTING", "LICENSE"],
      "options": {
        "proseWrap": "never",
        "parser": "markdown"
      }
    }
  ]
}
