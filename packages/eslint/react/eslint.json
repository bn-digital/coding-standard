{
  "extends": ["@bn-digital/eslint-config/typescript", "plugin:react/recommended", "plugin:react-hooks/recommended"],
  "ignorePatterns": ["**/graphql/index.tsx", "**/types/graphql.d.ts"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "shared-node-browser": true,
    "es6": true,
    "jest": true,
    "serviceworker": true,
    "worker": true
  },
  "globals": {
    "React": true,
    "ReactDOM": true,
    "mountNode": true,
    "process": "readonly"
  },
  "rules": {
    "react/jsx-no-target-blank": "warn",
    "react/jsx-curly-brace-presence": "off",
    "react/display-name": "off",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
