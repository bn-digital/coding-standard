{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "typings",
    "declarationMap": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ES5", "ES6", "ES7", "DOM", "ESNext.AsyncIterable", "ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "ESNext"
  },
  "include": ["./src/**/*"],
  "typeAcquisition": {
    "include": ["vite/client", "vite-plugin-svgr/client"],
    "enable": true
  }
}
