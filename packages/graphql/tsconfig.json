{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "typings",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "keyofStringsOnly": false,
    "lib": ["ES5", "ES6", "ES7", "DOM", "ESNext.AsyncIterable", "ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "ESNext"
  },
  "include": ["./src"],
  "typeAcquisition": {
    "enable": true,
    "include": ["./src/types"]
  }
}
