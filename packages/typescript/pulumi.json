{
  "extends": "./standard.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "noEmit": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "bin",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2016"
  }
}
